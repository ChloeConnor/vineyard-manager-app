<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/create_vineyard_page">

    <Space
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/space2" app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="@id/create_vineyard_page"
            />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/CreateVineyardHintMessage"
            android:ems="10"
            android:id="@+id/editText"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/space2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/space4" app:layout_constraintStart_toStartOf="@+id/space4"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"/>

    <Space
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/space4"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/choose_default"
            app:layout_constraintStart_toStartOf="@+id/choose_default"/>

    <TextView
            android:text="@string/CreateVineyardChooseDefault"
            android:layout_width="0dp"
            android:textSize="8pt"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:id="@+id/choose_default"
            app:layout_constraintTop_toBottomOf="@+id/space4" app:layout_constraintEnd_toEndOf="@id/space4"
            app:layout_constraintBottom_toTopOf="@+id/space5" app:layout_constraintStart_toStartOf="@+id/space5"
    />
    <Space
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:id="@+id/space5" app:layout_constraintTop_toBottomOf="@+id/choose_default"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/switch1"
            app:layout_constraintStart_toStartOf="@+id/switch1"/>
    <Switch
            android:text="@string/Switch1Buds"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/switch1"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/space5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/switch2" app:layout_constraintStart_toStartOf="@+id/switch2"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Switch
            android:text="@string/Switch2Shoots"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/switch2"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/switch1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/switch3" app:layout_constraintStart_toStartOf="@+id/switch3"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Switch
            android:text="@string/Switch3Flowers"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/switch3"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/switch2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/switch4" app:layout_constraintStart_toStartOf="@+id/switch4"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Switch
            android:text="@string/Switch4Bunches"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/switch4"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/switch3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/switch5" app:layout_constraintStart_toStartOf="@+id/switch5"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Switch
            android:text="@string/Switch5Weight"
            android:layout_width="379dp"
            android:layout_height="wrap_content" android:id="@+id/switch5"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/switch4"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="280dp" app:layout_constraintEnd_toEndOf="parent"
    />

    <Button
            android:text="@string/SubmitVineyardButtonText"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:background="@drawable/vm_buttonbackground"
            app:layout_constraintBottom_toBottomOf="@id/create_vineyard_page"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>